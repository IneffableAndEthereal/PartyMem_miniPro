/* pages/user/user.wxss */
Page{
  background-color: #f9f9f9;
}
.bg{
    height: 330rpx;
    width: 100%;
    background-color:  #66ccff;
    display: flex;
    /*定义在水平轴，上的排布对齐方式*/
    justify-content: center;
    /*定义在交叉轴.上的水平方式*/
    align-items: center;
    /*定义排布方向*/
    flex-direction: column;
    color: white;
}
.userAvatar{
    width: 180rpx;
    height: 180rpx;
    border-radius: 20%;
    overflow: hidden;
}
/* 菜单栏 */
.nav{
  display: flex;
  justify-content: center;
  padding: 15rpx 0;
  margin-top: -5rpx;
  background-color: #ffffff;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
}
/* 菜单项 */
.nav-item{
  width: 250rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
}
.nav-item:last-child{
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
}

.nav-item .icon{
  width:80rpx;
  height: 80rpx;
  margin: 0 auto;
}
/* 图标大小 */
.nav-item .icon image{
  width: 100%;
  height: 100%;
}
/* 菜单名称 */
.nav-item .text{
  font-size: 34rpx;
  color: #8799a3;
}
/* 内容面板 */
.content{
  margin: 25rpx 25rpx 0;
  background-color: #ffffff;
  min-height: 500rpx;
}
.content >image{
  width:40rpx;
  height: 40rpx;
  margin: 0 auto;
}